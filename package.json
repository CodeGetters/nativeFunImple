{
  "name": "root",
  "private": "true",
  "version": "1.0.0",
  "description": "Native function implementation",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint-staged": "npx lint-staged",
    "prepare": "husky",
    "format": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,scss,json,md}",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "jest",
    "check-types": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "prettier --write"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "keywords": [],
  "author": "CodeGetters",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/jest": "^29.5.12",
    "cz-git": "^1.9.4",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.4.0"
}
